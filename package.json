{
    "description": "Linter configs and custom TSLint rules of Tinkoff",
    "license": "Apache-2.0",
    "scripts": {
        "********** Linters": "",
        "prettier": "prettier --write '**/*{md,json,template.html}'",
        "eslint": "eslint 'packages/**/*.{ts,js}'",
        "lint": "npm run lint:ci",
        "lint:all": "lerna run lint:ci --parallel",
        "lint:ci": "run-p prettier eslint lint:all",
        "*** Bootstrap": "",
        "prebootstrap": "rm -rf packages/*/node_modules",
        "bootstrap": "lerna bootstrap --hoist --ignore-prepublish",
        "********** Build": "",
        "build:prod": "lerna run build:prod --parallel",
        "********** Test": "",
        "test:ci": "lerna run test:ci --parallel",
        "********** Version": "",
        "preversion": "lerna run build:prod --parallel",
        "version": "lerna version --conventional-commits --yes --ignore-changes '**/package-lock.json'",
        "********** Publish": "",
        "publish": "lerna publish from-git --yes"
    },
    "author": {
        "name": "Tinkoff Team",
        "email": "frontend@tinkoff.ru"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/TinkoffCreditSystems/linters.git"
    },
    "dependencies": {},
    "devDependencies": {
        "@tinkoff/eslint-plugin": "file:./packages/eslint-plugin",
        "@tinkoff/linters": "file:./packages/linters",
        "lerna": "^3.18.3",
        "npm-run-all": "^4.1.5"
    }
}
